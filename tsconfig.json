{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "commonjs",                     
    "declaration": true,                  
    "declarationMap": true,             
    "sourceMap": true,                    
    "outDir": "lib",                       
    "strict": true,
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*.ts"]
}
